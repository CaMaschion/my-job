<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyJob" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondary_variant</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple_dark</item>
    </style>

    <style name="Date.Radius" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_circle_date</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_g</item>
        <item name="android:layout_marginEnd">@dimen/dimen_g</item>
        <item name="android:layout_marginTop">@dimen/dimen_p</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_p</item>
        <item name="boxStrokeColor">@color/purple_dark</item>
        <item name="android:textColorHint">@color/purple_dark</item>
        <item name="hintTextColor">@color/purple_dark</item>



    </style>
</resources>